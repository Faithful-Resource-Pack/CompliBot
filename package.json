{
    "name": "complibot",
    "version": "3.0.0",
    "description": "A discord bot for the Faithful Team Resource Packs",
    "main": "src/index.ts",
    "type": "commonjs",
    "scripts": {
        "eslint": "npx eslint . --ext .ts,.tsx --fix",
        "dev": "pnpm run eslint && ts-node-dev --stack-size=1024 --stack-trace-limit=1000 --respawn --ignore-watch=config -r tsconfig-paths/register src/index.ts",
        "start": "node -r ts-node/register -r tsconfig-paths/register src/index.ts",
        "start-prod": "pnpm run build && cross-env NODE_ENV=production node --stack-size=1024 --stack-trace-limit=1000 dist/src/index.js --",
        "clean": "rimraf dist/",
        "copy-files": "copyfiles src/**/*.log dist/",
        "build": "pnpm run clean && tsc --project tsconfig.json && tsc-alias -p tsconfig.json -v && pnpm run copy-files"
    },
    "devDependencies": {
        "@types/node": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-import": "^2.25.2",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "tsc-alias": "^1.6.9",
        "tsconfig-paths": "^4.0.0",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@discordjs/builders": "^1.1.0",
        "@discordjs/rest": "^1.0.1",
        "@octokit/core": "^4.0.5",
        "axios": "^0.27.2",
        "ts-mixer": "^6.0.1",
        "chalk": "^4.1.2",
        "discord.js": "^14.2.0",
        "linux-release-info": "^3.0.0"
    }
}
