{
	"exclude": ["node_modules"],
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ESNEXT",
		"noEmit": true,
		"paths": {
			"@client": ["./src/client"],
			"@functions/*": ["./src/helpers/functions/*"],
			"@utility/*": ["./src/helpers/utility/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@lang/*": ["./lang/*"],
			"@json/*": ["./json/*"],
			"@images/*": ["./src/helpers/images/*"],
			"@index": ["./src/index.ts"]
		}
	}
}
