{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNEXT",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"../*"
			],
			"@src/*": [
				"*"
			] //you will thank me later
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}